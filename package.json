{
  "name": "deepform",
  "version": "1.0.0",
  "description": "AI Depth Interview → Hypothesis → PRD → Coding Agent Spec",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --env-file=.env --experimental-strip-types src/index.ts",
    "dev": "node --env-file=.env --experimental-strip-types --watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "lint:text": "textlint ./README.md",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/oauth-providers": "^0.8.5",
    "better-sqlite3": "^12.6.2",
    "geoip-lite": "^1.4.10",
    "hono": "^4.11.9",
    "kysely": "^0.28.11",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.58.2",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.2.5",
    "@types/geoip-lite": "^1.4.4",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.34.0",
    "rimraf": "^6.1.2",
    "textlint": "^15.5.1",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-inappropriate-words": "^2.0.0",
    "textlint-rule-no-double-negative-ja": "^2.0.1",
    "textlint-rule-no-dropping-the-ra": "^3.0.0",
    "textlint-rule-prefer-tari-tari": "^1.0.3",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
